<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <xsd:element name="prices">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="price" maxOccurs="unbounded">
                    <xsd:simpleType>
                        <xsd:restriction base="xsd:decimal">
                        </xsd:restriction>
                    </xsd:simpleType>
                </xsd:element>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
</xsd:schema>